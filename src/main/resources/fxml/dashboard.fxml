<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.DashboardController"
            prefHeight="700" prefWidth="1200">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15"
              style="-fx-background-color: #1976D2;"
              prefHeight="70">
            <padding>
                <Insets left="20" right="20"/>
            </padding>

            <Label text="游닄" style="-fx-font-size: 30;"/>

            <Label text="Gesti칩n de Biblioteca" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="btnCerrarSesion" text="Cerrar Sesi칩n"
                    onAction="#handleCerrarSesion"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 13; -fx-background-radius: 5;"
                    prefHeight="35" prefWidth="120"/>
        </HBox>
    </top>

    <center>
        <HBox>
            <VBox spacing="5" prefWidth="250"
                  style="-fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-width: 0 1 0 0;">
                <padding>
                    <Insets top="30" left="20" right="20"/>
                </padding>

                <Label text="MENU PRINCIPAL" textFill="#9E9E9E">
                    <font>
                        <Font name="System Bold" size="11"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="20"/>
                    </VBox.margin>
                </Label>

                <Button fx:id="btnCatalogo" text="游닄  Catalogo" alignment="CENTER_LEFT" maxWidth="Infinity"
                        onAction="#handleCatalogo"
                        style="-fx-background-color: transparent; -fx-text-fill: #424242; -fx-font-size: 14;"
                        prefHeight="50">
                    <padding>
                        <Insets left="10"/>
                    </padding>
                </Button>

                <Button fx:id="btnUsuarios" text="游논  Usuarios" alignment="CENTER_LEFT" maxWidth="Infinity"
                        onAction="#handleUsuarios"
                        style="-fx-background-color: transparent; -fx-text-fill: #424242; -fx-font-size: 14;"
                        prefHeight="50">
                    <padding>
                        <Insets left="10"/>
                    </padding>
                </Button>

                <Button fx:id="btnPrestamos" text="游눯  Prestamos" alignment="CENTER_LEFT" maxWidth="Infinity"
                        onAction="#handlePrestamos"
                        style="-fx-background-color: transparent; -fx-text-fill: #424242; -fx-font-size: 14;"
                        prefHeight="50">
                    <padding>
                        <Insets left="10"/>
                    </padding>
                </Button>

                <Button fx:id="btnSanciones" text="游댣  Sanciones" alignment="CENTER_LEFT" maxWidth="Infinity"
                        onAction="#handleSanciones"
                        style="-fx-background-color: transparent; -fx-text-fill: #424242; -fx-font-size: 14;"
                        prefHeight="50">
                    <padding>
                        <Insets left="10"/>
                    </padding>
                </Button>
            </VBox>

            <!-- Contenedor principal con scroll vertical.
     fitToWidth=true hace que el contenido se ajuste al ancho -->
            <ScrollPane fitToWidth="true" style="-fx-background: #F5F5F5;">

                <!-- Contenedor vertical principal de todo el dashboard -->
                <VBox spacing="30">

                    <!-- M치rgenes internos del VBox principal -->
                    <padding>
                        <Insets top="20" right="20" bottom="30" left="20"/>
                    </padding>

                    <!-- FILA SUPERIOR: tarjetas de resumen (estad칤sticas r치pidas) -->
                    <HBox spacing="20" alignment="CENTER_LEFT">

                        <!-- Tarjeta: Total de libros -->
                        <VBox alignment="CENTER" spacing="30" prefWidth="220" prefHeight="120"
                              style="-fx-background-color: #42A5F5; -fx-background-radius: 10;">

                            <!-- N칰mero total de libros -->
                            <Label fx:id="lblTotalLibros" text="6" textFill="WHITE">
                                <font>
                                    <Font name="System Bold" size="48"/>
                                </font>
                            </Label>

                            <!-- Texto descriptivo -->
                            <Label text="Total Libros" textFill="WHITE">
                                <font>
                                    <Font name="System" size="16"/>
                                </font>
                            </Label>
                        </VBox>

                        <!-- Tarjeta: pr칠stamos totales -->
                        <VBox alignment="CENTER" spacing="10" prefWidth="220" prefHeight="120"
                              style="-fx-background-color: #66BB6A; -fx-background-radius: 10;">

                            <!-- N칰mero total de pr칠stamos -->
                            <Label fx:id="lblPrestamosTotales" text="10" textFill="WHITE">
                                <font>
                                    <Font name="System Bold" size="48"/>
                                </font>
                            </Label>

                            <!-- Texto descriptivo -->
                            <Label text="Prestamos Totales" textFill="WHITE">
                                <font>
                                    <Font name="System" size="16"/>
                                </font>
                            </Label>
                        </VBox>

                        <!-- Tarjeta: n칰mero de usuarios -->
                        <VBox alignment="CENTER" spacing="10" prefWidth="220" prefHeight="120"
                              style="-fx-background-color: #EC407A; -fx-background-radius: 10;">

                            <!-- N칰mero de usuarios registrados -->
                            <Label fx:id="lblUsuarios" text="5" textFill="WHITE">
                                <font>
                                    <Font name="System Bold" size="48"/>
                                </font>
                            </Label>

                            <!-- Texto descriptivo -->
                            <Label text="Usuarios" textFill="WHITE">
                                <font>
                                    <Font name="System" size="16"/>
                                </font>
                            </Label>
                        </VBox>

                        <!-- Tarjeta: sanciones activas -->
                        <VBox alignment="CENTER" spacing="10" prefWidth="220" prefHeight="120"
                              style="-fx-background-color: #EF5350; -fx-background-radius: 10;">

                            <!-- N칰mero de sanciones activas -->
                            <Label fx:id="lblSancionesActivas" text="2" textFill="WHITE">
                                <font>
                                    <Font name="System Bold" size="48"/>
                                </font>
                            </Label>

                            <!-- Texto descriptivo -->
                            <Label text="Sanciones Activas" textFill="WHITE">
                                <font>
                                    <Font name="System" size="16"/>
                                </font>
                            </Label>
                        </VBox>
                    </HBox>

                    <!-- FILA INFERIOR: gr치ficos -->
                    <HBox spacing="20" alignment="CENTER_LEFT">

                        <!-- Contenedor del gr치fico circular -->
                        <VBox spacing="15" prefWidth="450" prefHeight="400" HBox.hgrow="ALWAYS"
                              style="-fx-background-color: white; -fx-background-radius: 10;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

                            <!-- M치rgenes internos -->
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>

                            <!-- T칤tulo del gr치fico -->
                            <Label text="Disponibilidad de Ejemplares">
                                <font>
                                    <Font name="System Bold" size="18"/>
                                </font>
                            </Label>

                            <!-- Gr치fico circular de disponibilidad -->
                            <PieChart fx:id="pieChartDisponibilidad"
                                      prefHeight="320"
                                      VBox.vgrow="ALWAYS"/>
                        </VBox>

                        <!-- Contenedor del gr치fico de barras -->
                        <VBox spacing="15" prefWidth="450" prefHeight="400" HBox.hgrow="ALWAYS"
                              style="-fx-background-color: white; -fx-background-radius: 10;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

                            <!-- M치rgenes internos -->
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>

                            <!-- T칤tulo del gr치fico -->
                            <Label text="Top 5 Libros Mas Prestados">
                                <font>
                                    <Font name="System Bold" size="18"/>
                                </font>
                            </Label>

                            <!-- Gr치fico de barras -->
                            <BarChart fx:id="barChartTop5"
                                      prefHeight="320"
                                      VBox.vgrow="ALWAYS">

                                <!-- Eje X: nombres de libros -->
                                <xAxis>
                                    <CategoryAxis side="BOTTOM" label="Libros"/>
                                </xAxis>

                                <!-- Eje Y: n칰mero de pr칠stamos -->
                                <yAxis>
                                    <NumberAxis side="LEFT" label="Prestamos"/>
                                </yAxis>
                            </BarChart>
                        </VBox>
                    </HBox>
                </VBox>
            </ScrollPane>

        </HBox>
    </center>
</BorderPane>