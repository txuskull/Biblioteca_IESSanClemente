<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.Region?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TextField?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.SancionesController"
            prefHeight="750" prefWidth="1150"
            style="-fx-background-color: white;"
            stylesheets="@../css/estilos.css">

    <top>
        <!-- CABECERA 80px -->
        <HBox spacing="20" alignment="CENTER"
              style="-fx-background-color: rgba(70, 141, 174, 1);"
              prefHeight="80">
            <padding>
                <Insets left="30" right="30"/>
            </padding>

            <!-- BOTÓN VOLVER BLANCO -->
            <Button fx:id="btnVolver" text="← Volver"
                    onAction="#handleVolver"
                    styleClass="boton-volver-header"
                    prefHeight="35" prefWidth="100"/>

            <!-- ESPACIO FLEXIBLE IZQUIERDO -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- IMAGEN PEQUEÑA -->
            <ImageView fitHeight="62" fitWidth="60" preserveRatio="true">
                <Image url="@../imagenes/rgb(70, 141, 174)_SIN.png"/>
            </ImageView>

            <!-- TÍTULO -->
            <Label text="Sanciones Disciplinarias" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>

            <!-- ESPACIO FLEXIBLE DERECHO -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- ESPACIO INVISIBLE (equilibrio) -->
            <Region prefWidth="100" prefHeight="35"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- BUSCADOR -->
            <TextField fx:id="txtBuscar"
                       promptText="Buscar por alumno o motivo..."
                       prefHeight="40"
                       maxWidth="Infinity"/>

            <TableView fx:id="tabla" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colUser" text="Alumno" prefWidth="200"/>
                    <TableColumn fx:id="colMotivo" text="Motivo" prefWidth="250"/>
                    <TableColumn fx:id="colDias" text="Días" prefWidth="75"/>
                    <TableColumn fx:id="colFin" text="Fin Sanción" prefWidth="120"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button fx:id="btnManual" text="Nueva Sanción Manual"
                    prefWidth="180" prefHeight="40"
                    onAction="#handleManual"
                    styleClass="boton-nuevo">
                <font><Font name="System Bold" size="13"/></font>
            </Button>

            <Button fx:id="btnBorrar" text="Levantar Sanción (Borrar)"
                    prefWidth="190" prefHeight="40"
                    onAction="#handleBorrar"
                    styleClass="boton-eliminar">
                <font><Font name="System Bold" size="13"/></font>
            </Button>
        </HBox>
    </bottom>
</BorderPane>