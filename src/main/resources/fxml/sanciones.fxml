<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.SancionesController"
            prefHeight="750" prefWidth="1150"
            style="-fx-background-color: white;">

    <top>
        <StackPane style="-fx-background-color: #3579be;" prefHeight="110">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <HBox spacing="15" alignment="CENTER">
                <ImageView fitHeight="80" fitWidth="80" preserveRatio="true"/>

                <Label text="Sanciones Disciplinarias" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="24"/>
                    </font>
                </Label>
            </HBox>

            <HBox alignment="CENTER_LEFT" pickOnBounds="false">
                <Button fx:id="btnVolver" text="Volver"
                        onAction="#handleVolver"
                        style="-fx-background-color: #2a61a0; -fx-text-fill: white;"/>
            </HBox>
        </StackPane>
    </top>

    <center>
        <VBox>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="tabla" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colUser" text="Alumno" prefWidth="200"/>
                    <TableColumn fx:id="colMotivo" text="Motivo" prefWidth="250"/>
                    <TableColumn fx:id="colDias" text="Días" prefWidth="75"/>
                    <TableColumn fx:id="colFin" text="Fin Sanción" prefWidth="120"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER"
              style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button fx:id="btnManual" text="Nueva Sanción Manual"
                    onAction="#handleManual"
                    style="-fx-background-color: #0275d8; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button fx:id="btnBorrar" text="Levantar Sancion (Borrar)"
                    onAction="#handleBorrar"
                    style="-fx-background-color: #0275d8; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>
</BorderPane>