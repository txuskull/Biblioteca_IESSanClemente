<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.Region?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.UsuariosController"
            prefHeight="750" prefWidth="1150"
            stylesheets="@../css/estilos.css"
            style="-fx-background-color: white;">

    <top>
        <!-- CABECERA 80px -->
        <HBox spacing="20" alignment="CENTER"
              style="-fx-background-color: rgba(70, 141, 174, 1);"
              prefHeight="80">
            <padding>
                <Insets left="30" right="30"/>
            </padding>

            <!-- BOTÓN VOLVER A LA IZQUIERDA -->
            <Button fx:id="btnVolver" text="Volver"
                    onAction="#handleVolver"
                    styleClass="boton-cerrar"
                    prefHeight="30" prefWidth="90"/>

            <!-- ESPACIO FLEXIBLE IZQUIERDO -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- IMAGEN PEQUEÑA CENTRADA VERTICALMENTE -->
            <ImageView fitHeight="62" fitWidth="60" preserveRatio="true">
                <Image url="@../imagenes/rgb(70, 141, 174)_SIN.png"/>
            </ImageView>

            <!-- TÍTULO CENTRADO VERTICALMENTE -->
            <Label text="Directorio de Usuarios" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="32"/>
                </font>
            </Label>

            <!-- ESPACIO FLEXIBLE DERECHO -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- ESPACIO INVISIBLE DEL MISMO TAMAÑO QUE EL BOTÓN (para equilibrar) -->
            <Region prefWidth="90" prefHeight="30"/>
        </HBox>
    </top>

    <center>
        <VBox>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="tabla" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="DNI" prefWidth="100"/>
                    <TableColumn text="Nombre Completo" prefWidth="250"/>
                    <TableColumn text="Rol" prefWidth="100"/>
                    <TableColumn text="Email" prefWidth="200"/>
                    <TableColumn text="Sancionado Hasta" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER"
              style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button fx:id="btnNuevo" text="Nuevo Usuario"
                    onAction="#handleNuevo"
                    styleClass="boton-cerrar"/>

            <Button fx:id="btnEditar" text="Editar Usuario"
                    onAction="#handleEditar"
                    styleClass="boton-cerrar"/>

            <Button fx:id="btnBorrar" text="Borrar Usuario"
                    onAction="#handleBorrar"
                    styleClass="boton-cerrar"/>
        </HBox>
    </bottom>
</BorderPane>