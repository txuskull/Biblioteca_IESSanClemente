<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.UsuariosController"
            prefHeight="750" prefWidth="1150"
            stylesheets="@../css/estilos.css"
            style="-fx-background-color: white;">

    <top>
        <StackPane style="-fx-background-color: #3579be;" prefHeight="110">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <HBox spacing="15" alignment="CENTER">
                <ImageView fitHeight="80" fitWidth="80" preserveRatio="true"/>

                <Label text="Directorio de Usuarios" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="24"/>
                    </font>
                </Label>
            </HBox>

            <HBox alignment="CENTER_LEFT" pickOnBounds="false">
                <Button fx:id="btnVolver" text="Volver"
                        onAction="#handleVolver"
                        styleClass="boton-cerrar"/>
            </HBox>
        </StackPane>
    </top>

    <center>
        <VBox>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="tabla" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="DNI" prefWidth="100"/>
                    <TableColumn text="Nombre Completo" prefWidth="250"/>
                    <TableColumn text="Rol" prefWidth="100"/>
                    <TableColumn text="Email" prefWidth="200"/>
                    <TableColumn text="Sancionado Hasta" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER"
              style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button fx:id="btnNuevo" text="Nuevo Usuario"
                    onAction="#handleNuevo"
                    styleClass="boton-cerrar"/>

            <Button fx:id="btnEditar" text="Editar Usuario"
                    onAction="#handleEditar"
                    styleClass="boton-cerrar"/>

            <Button fx:id="btnBorrar" text="Borrar Usuario"
                    onAction="#handleBorrar"
                    styleClass="boton-cerrar"/>
        </HBox>
    </bottom>
</BorderPane>