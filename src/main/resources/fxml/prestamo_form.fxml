<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.PrestamoFormController"
            prefHeight="750" prefWidth="1150"
            style="-fx-background-color: white;"
            stylesheets="@../css/estilos.css">

    <top>
        <StackPane style="-fx-background-color: #3579be;" prefHeight="110">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>

            <HBox alignment="CENTER_LEFT">
                <ImageView fitHeight="150" fitWidth="150" preserveRatio="true"/>
            </HBox>

            <Label text="Registrar Prestamo" textFill="WHITE">
                <font>
                    <Font name="Arial Bold" size="28"/>
                </font>
            </Label>
        </StackPane>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <GridPane hgap="20" vgap="20" alignment="TOP_CENTER">
                <padding>
                    <Insets top="50" right="50" bottom="50" left="50"/>
                </padding>

                <columnConstraints>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                </columnConstraints>

                <Label text="Filtrar Alumno:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                       style="-fx-text-fill: #555;">
                    <font>
                        <Font name="Arial Bold" size="14"/>
                    </font>
                </Label>
                <TextField fx:id="txtBuscarUsuario" GridPane.columnIndex="1" GridPane.rowIndex="0"
                           promptText="Filtrar alumno por nombre..."
                           prefWidth="400" prefHeight="40"/>

                <Label text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                       style="-fx-text-fill: #555;">
                    <font>
                        <Font name="Arial Bold" size="14"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbUsuarios" GridPane.columnIndex="1" GridPane.rowIndex="1"
                          promptText="Selecciona al alumno..."
                          prefWidth="400" prefHeight="40"/>

                <Label text="Libro:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                       style="-fx-text-fill: #555;">
                    <font>
                        <Font name="Arial Bold" size="14"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbLibros" GridPane.columnIndex="1" GridPane.rowIndex="2"
                          promptText="Selecciona el libro..."
                          prefWidth="400" prefHeight="40"/>

                <Label text="Fecha Prestamo:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                       style="-fx-text-fill: #555;">
                    <font>
                        <Font name="Arial Bold" size="14"/>
                    </font>
                </Label>
                <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="3"
                            prefWidth="400" prefHeight="40"/>

                <Label text="Fecha Devolucion:" GridPane.columnIndex="0" GridPane.rowIndex="4"
                       style="-fx-text-fill: #555;">
                    <font>
                        <Font name="Arial Bold" size="14"/>
                    </font>
                </Label>
                <DatePicker fx:id="dateDevolucion" GridPane.columnIndex="1" GridPane.rowIndex="4"
                            prefWidth="400" prefHeight="40"/>
            </GridPane>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button fx:id="btnCancelar" text="CANCELAR" prefWidth="200" prefHeight="45"
                    onAction="#handleCancelar"
                    styleClass="boton-cerrar">
                <font>
                    <Font name="Arial Bold" size="14"/>
                </font>
            </Button>

            <Button fx:id="btnGuardar" text="REGISTRAR PRESTAMO" prefWidth="200" prefHeight="45"
                    onAction="#handleGuardar"
                    styleClass="boton-cerrar">
                <font>
                    <Font name="Arial Bold" size="14"/>
                </font>
            </Button>
        </HBox>
    </bottom>
</BorderPane>